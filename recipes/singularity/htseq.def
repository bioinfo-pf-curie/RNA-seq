Bootstrap: docker
From: conda/miniconda3-centos7

%labels
    gitUrl ssh://git@gitlab.curie.fr:2222/data-analysis/RNA-seq.git
    gitCommit bc28c568b4184a54d8245a025513ae53ee38d0dd / devel

%environment
    PATH=/usr/local/envs/HTSeqCounts-0.13.5/bin:$PATH
    LC_ALL=en_US.utf-8
    LANG=en_US.utf-8

# real path from baseDir: htseq.yml
%files
    htseq.yml /opt/htseq.yml

%post
    yum install -y which   \
    && yum clean all \
    && conda env create -f /opt/htseq.yml \
    && echo "source activate HTSeqCounts-0.13.5" > ~/.bashrc \
    && conda clean -a

